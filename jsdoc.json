{
  "source": {
    "include": ["src"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "default": {
      "includeDate": false
    },
    "cleverLinks": true,
    "monospaceLinks":true
  },
  "opts": {
    "recurse": true,
    "template": "node_modules/docdash",
    "destination": "./docs/"
  }
}
